- suite ||= @suite
- project = suite.project
br
ul.breadcrumbs
  li = link_to "Home", root_path
  li = link_to project.title, project_path(project)
  li = suite.title

= render :partial => "suites/title", :locals => { :project => project, :suite => suite }
.large-12.medium-12.small-12.columns
  - if suite.pages.any?
    - suite.pages.each do |page|
      h3
        = link_to page.title, project_suite_page_path(project, suite, page)
      p = page.description
  hr
  h6 = link_to "Add Page", new_project_suite_page_path(project, suite)
